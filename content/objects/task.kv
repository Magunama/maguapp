<Task>:
    right_container: right_container
    menu_button: menu_button
    radio_icon: radio_icon
    deadline_box: deadline_box

    text: root.title
    _no_ripple_effect: True

#    md_bg_color: app.theme_cls.bg_dark
    IconLeftWidget:
        id: radio_icon
        icon: "radiobox-blank"
        on_release: root.complete()
    Container:
        id: right_container
        MDIconButton:
            icon: "chevron-up"
            on_release: root.move_task("up")
        MDIconButton:
            icon: "chevron-down"
            on_release: root.move_task("down")
        MDIconButton:
            id: menu_button
            icon: "dots-vertical"
            on_release: root.menu.open()
    MDChip:
        id: deadline_box
        pos_hint: {"x": 0.1, "y": 0.05}
        color: app.theme_cls.primary_color
