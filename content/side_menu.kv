<SideMenu>
    BoxLayout:
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"

        AnchorLayout:
            pos_hint: {"top": 1}
            anchor_x: "left"
            size_hint_y: None
            height: avatar.height

            Image:
                id: avatar
                size_hint: None, None
                size: "60dp", "60dp"
                source: "content/images/logo.png"

        MDLabel:
            text: "FanTaskify"
            theme_text_color: "Primary"
            font_style: "Button"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "robert.ciama00@e-uvt.ro"
            theme_text_color: "Primary"
            font_style: "Caption"
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:
            size_hint_y: 0.01
            color: app.theme_cls.primary_color

        ScrollView:
            MDList:
                OneLineListItem:
                    text: "Notes"
                    on_press:
                        root.switch_screen("Notes")
                    divider: "Inset"

                OneLineListItem:
                    text: "Today's Tasks"
                    on_press:
                        root.switch_screen("Today")
                    divider: "Inset"
                OneLineListItem:
                    text: "All Tasks"
                    on_press:
                        root.switch_screen("Tasks")
                MDSeparator:
                    color: app.theme_cls.primary_color
                OneLineIconListItem:
                    text: "Settings"
                    divider: "Inset"
                    on_press: root.settings()
                    IconLeftWidget:
                        icon: "cog"
                        _no_ripple_effect: True
                        on_release: root.settings()
                OneLineIconListItem:
                    text: "Exit"
                    on_press: app.stop()
                    IconLeftWidget:
                        icon: "exit-to-app"
                        _no_ripple_effect: True
                        on_release: app.stop()
                MDSeparator:
                    color: app.theme_cls.primary_color
