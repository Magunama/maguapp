#:import utils kivy.utils

<PopupGrid>
    GridLayout:
        rows: 2
        pos: root.center_x, root.center_y
        Label:
            text: "Nothing yet..."

<LoginHolder>
    size: root.size
    name_obj: name_obj
    pword_obj: pword_obj
    GridLayout:
        width: self.parent.width
        pos: 0, 120
        canvas:
            Color:
                rgb: utils.get_color_from_hex('#F05F40')
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 2
        Label:
            text: "Username:"
        TextInput:
            id: name_obj
            multiline: False
            on_text_validate: root.text_integrity(self)
        Label:
            text: "Password:"
        TextInput:
            id: pword_obj
            multiline: False
            on_text_validate: root.text_integrity(self)
    Button:
        width: self.parent.width
        text: "Login!"
        on_release: root.login_button(name_obj, pword_obj)

<Start>
    login: login
    GridLayout:
        size: root.size
        pos: 0,0
        cols: 1
        LoginHolder:
            id: login
