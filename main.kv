#:include content/templates/pages.kv
#:include content/side_menu.kv

<Home>
    screen_manager: screen_manager
    side_menu: side_menu
    MDNavigationLayout:
        PageBar:
            id: toolbar
        ScreenManager:
            toolbar: toolbar
            id: screen_manager
            size_hint_y: None
            height: root.height - toolbar.height
            Notes:
                id: notes
            Today:
                id: today
            Tasks:
                id: tasks
        MDNavigationDrawer:
            md_bg_color: app.theme_cls.bg_dark
            id: nav_drawer
            SideMenu:
                id: side_menu
                nav_drawer: nav_drawer
                screen_manager: screen_manager

<Main>
    screen_manager: screen_manager
    home: home
    ScreenManager:
        id: screen_manager
        Home:
            id: home
            name: "Home"